<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.maze"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.BLUETOOTH"/>
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.dpkabe.maze.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.dpkabe.maze.activity.MazeActivity2"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity 
            android:name="com.dpkabe.maze.activity.FlexibleMazeActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity 
            android:name="com.dpkabe.maze.activity.FlexibleDrawViewMazeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity 
            android:name="com.dpkabe.maze.activity.ConnectActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity 
            android:name="com.dpkabe.maze.activity.DeviceListActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
    </application>

</manifest>